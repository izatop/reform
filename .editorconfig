root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{js,mts,ts}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120
ij_javascript_comma_on_new_line = true
