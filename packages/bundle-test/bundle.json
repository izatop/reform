{
    "preset": {
        "default": {
            "base": "src",
            "build": "dist",
            "plugins": {
                "@reform/bundle-html-entry": {}
            },
            "bundle": true,
            "format": "esm",
            "platform": "browser",
            "target": [
                "es2020"
            ],
            "serve": {
                "port": 8000,
                "fallback": {
                    "/:route*": "index.html"
                }
            }
        }
    },
    "bundle": [
        {
            "id": "test",
            "base": "src",
            "preset": "default",
            "entry": "index.tsx",
            "treeShaking": true,
            "plugins": {
                "@reform/bundle-sass": {},
                "@reform/bundle-font": {},
                "@reform/bundle-graphql": {}
            },
            "files": [
                "sitemap/*",
                "robots.txt"
            ],
            "serve": {
                "host": "bundle.localhost"
            }
        }
    ]
}
