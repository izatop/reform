{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "IJSONBundle": {
            "properties": {
                "app": {
                    "$ref": "#/definitions/IPWAApplicationConfig"
                },
                "base": {
                    "type": "string"
                },
                "build": {
                    "type": "string"
                },
                "entry": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "envFile": {
                    "type": "string"
                },
                "environment": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "files": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "type": [
                        "string",
                        "number"
                    ]
                },
                "loader": {
                    "additionalProperties": {
                        "enum": [
                            "base64",
                            "binary",
                            "css",
                            "dataurl",
                            "default",
                            "file",
                            "js",
                            "json",
                            "jsx",
                            "text",
                            "ts",
                            "tsx"
                        ],
                        "type": "string"
                    },
                    "type": "object"
                },
                "platform": {
                    "enum": [
                        "browser",
                        "neutral",
                        "node"
                    ],
                    "type": "string"
                },
                "plugins": {
                    "$ref": "#/definitions/Partial<IPluginList>"
                },
                "preset": {
                    "type": "string"
                },
                "serve": {
                    "properties": {
                        "host": {
                            "type": "string"
                        },
                        "port": {
                            "type": "number"
                        }
                    },
                    "type": "object"
                },
                "sourcemap": {
                    "enum": [
                        "both",
                        "external",
                        false,
                        "inline",
                        true
                    ]
                },
                "splitting": {
                    "type": "boolean"
                },
                "treeShaking": {
                    "enum": [
                        "ignore-annotations",
                        true
                    ]
                },
                "variables": {
                    "$ref": "#/definitions/Record<string,string|number|boolean>"
                }
            },
            "type": "object"
        },
        "IPWAApplicationConfig": {
            "properties": {
                "bundle": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "manifest": {
                    "$ref": "#/definitions/PWAManifest"
                },
                "source": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "PWAManifest": {
            "type": "object"
        },
        "Partial<IPluginList>": {
            "properties": {
                "@reform/bundle-font": {
                    "properties": {
                        "filter": {
                            "$ref": "#/definitions/RegExp"
                        }
                    },
                    "type": "object"
                },
                "@reform/bundle-graphql": {
                    "properties": {
                        "filter": {
                            "$ref": "#/definitions/RegExp"
                        }
                    },
                    "type": "object"
                },
                "@reform/bundle-sass": {
                    "properties": {
                        "compress": {
                            "$ref": "#/definitions/RegExp"
                        },
                        "filter": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "Record<string,IJSONBundle>": {
            "type": "object"
        },
        "Record<string,string|number|boolean>": {
            "type": "object"
        },
        "RegExp": {
            "properties": {
                "dotAll": {
                    "type": "boolean"
                },
                "flags": {
                    "type": "string"
                },
                "global": {
                    "type": "boolean"
                },
                "ignoreCase": {
                    "type": "boolean"
                },
                "lastIndex": {
                    "type": "number"
                },
                "multiline": {
                    "type": "boolean"
                },
                "source": {
                    "type": "string"
                },
                "sticky": {
                    "type": "boolean"
                },
                "unicode": {
                    "type": "boolean"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "bundle": {
            "items": {
                "$ref": "#/definitions/IJSONBundle"
            },
            "type": "array"
        },
        "preset": {
            "$ref": "#/definitions/Record<string,IJSONBundle>"
        }
    },
    "type": "object"
}

