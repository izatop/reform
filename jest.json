{
    "roots": [
        "<rootDir>/packages/components/test",
        "<rootDir>/packages/pro/test"
    ],
    "snapshotSerializers": [
        "jest-serializer-path"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test[^/]*\\.tsx?$",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
        "/dist/",
        "/node_modules/"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "json",
        "js"
    ],
    "globals": {
        "ts-jest": {
            "tsConfig": "tsconfig.test.json"
        }
    }
}
