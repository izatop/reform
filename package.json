{
    "name": "reform",
    "version": "0.2.0",
    "private": true,
    "repository": "https://github.com/izatop/reform",
    "author": {
        "name": "Artur Bier",
        "email": "izatop@gmail.com"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "publish": "lerna publish --conventional-commits --yes",
        "clean": "rimraf -g 'packages/*/{dist/*,*.tsbuildinfo,yarn-error.log}'",
        "build": "tsc -b packages",
        "watch": "yarn build -w",
        "ci:build": "yarn build",
        "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
        "lint:fix": "eslint --fix 'packages/*/{src,test}/**/*.{ts,tsx}'",
        "test": "yarn test:clean && jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --watch",
        "check": "yarn lint && yarn build && yarn test"
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "coveralls": "^3.1.1",
        "eslint": "^8.28.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-react": "^7.31.11",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^29.3.1",
        "jest-serializer-path": "^0.1.15",
        "lerna": "^6.6.2",
        "react": "^18.1.0",
        "rimraf": "^5.0.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "license": "MIT",
    "dependencies": {}
}
