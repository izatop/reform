{
    "name": "reform",
    "version": "0.2.0",
    "private": true,
    "repository": "https://github.com/izatop/reform",
    "author": {
        "name": "Artur Bier",
        "email": "izatop@gmail.com"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "publish": "lerna publish --conventional-commits --yes",
        "clean": "lerna run build:clean",
        "watch": "sh ./watch.sh",
        "build": "sh ./build.sh",
        "ci:build": "yarn build",
        "ci:coveralls": "cat ./coverage/lcov.info | yarn coveralls",
        "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
        "lint:fix": "eslint --fix 'packages/*/{src,test}/**/*.{ts,tsx}'",
        "test": "yarn test:clean && jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --watch",
        "check": "yarn lint && yarn build && yarn test"
    },
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@types/react-test-renderer": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^4.29.0",
        "@typescript-eslint/parser": "^4.29.0",
        "coveralls": "^3.1.1",
        "eslint": "^7.32.0",
        "eslint-plugin-react": "^7.24.0",
        "jest": "^27.0.6",
        "jest-serializer-path": "^0.1.15",
        "lerna": "^4.0.0",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.5"
    },
    "license": "MIT"
}
