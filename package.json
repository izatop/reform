{
    "name": "reform",
    "version": "0.2.0",
    "private": true,
    "repository": "https://github.com/izatop/reform",
    "author": {
        "name": "Artur Bier",
        "email": "izatop@gmail.com"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "publish": "lerna publish --conventional-commits --yes",
        "clean": "lerna run clean",
        "watch": "sh ./watch.sh",
        "build": "sh ./build.sh",
        "ci:build": "yarn build",
        "ci:coveralls": "cat ./coverage/lcov.info | yarn coveralls",
        "lint": "eslint 'packages/*/{src,test}/**/*.{ts,tsx}'",
        "lint:fix": "eslint --fix 'packages/*/{src,test}/**/*.{ts,tsx}'",
        "test": "yarn test:clean && jest --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --watch",
        "check": "yarn lint && yarn build && yarn test"
    },
    "devDependencies": {
        "@types/jest": "^27.0.3",
        "@types/react-test-renderer": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "coveralls": "^3.1.1",
        "eslint": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^27.4.3",
        "jest-serializer-path": "^0.1.15",
        "lerna": "^4.0.0",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2"
    },
    "license": "MIT",
    "dependencies": {}
}
