{
    "name": "reform",
    "version": "0.2.0",
    "private": true,
    "repository": "https://github.com/izatop/reform",
    "author": {
        "name": "Artur Bier",
        "email": "izatop@gmail.com"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "publish": "lerna publish --conventional-commits --yes",
        "clean": "lerna run build:clean",
        "watch": "sh ./watch.sh",
        "ci:build": "sh ./build.sh",
        "ci:coveralls": "cat ./coverage/lcov.info | yarn coveralls",
        "lint": "tslint 'packages/*/{src,test}/**/*.ts'",
        "lint:fix": "tslint --fix 'packages/*/{src,test}/**/*.ts'",
        "test": "yarn test:clean && jest --passWithNoTests --config jest.json --coverage",
        "test:clean": "rimraf coverage",
        "test:watch": "jest --passWithNoTests --config jest.json --watch",
        "test:snapshot": "jest --passWithNoTests --config jest.json --updateSnapshot",
        "api-example:play": "lerna run play --scope=@reform/api-example",
        "dashboard:play": "lerna run play --scope=@reform/dashboard",
        "bootstrap": "lerna bootstrap && lerna link"
    },
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@types/react-test-renderer": "^16.9.2",
        "coveralls": "^3.0.9",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "jest-serializer-path": "^0.1.15",
        "lerna": "^3.20.2",
        "react-test-renderer": "^16.13.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.1",
        "ts-node": "8.7.0",
        "tslint": "^6.1.0",
        "typescript": "^3.8.3"
    },
    "license": "MIT"
}
